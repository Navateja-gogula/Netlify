pipeline {
    agent any

    tools {
        nodejs "NodeJS_18"
    }

    environment {
        NETLIFY_AUTH_TOKEN = credentials('netlify_token')
        NETLIFY_PROD_SITE_ID = '915df1e5-27d7-4881-97bd-4087f9196c89'  // Replace with actual Netlify production site ID
        GITHUB_TOKEN = credentials('github_token')
        REPO_URL = "https://github.com/Navateja-gogula/Netlify.git"
        PROD_BRANCH = "prod"
    }

    stages {
        stage('Checkout Production Code') {
            steps {
                script {
                    echo "üîÑ Checking out production code from GitHub..."
                    sh '''
                        rm -rf Netlify || true
                        git clone -b $PROD_BRANCH $REPO_URL Netlify || { echo "‚ùå Git clone failed"; exit 1; }
                        echo "‚úÖ Code checkout complete."
                    '''
                }
            }
        }

        stage('Verify Directory Structure') {
            steps {
                script {
                    sh '''
                        echo "üìÅ Checking if Netlify exists..."
                        ls -l Netlify || { echo "‚ùå Netlify repo not found!"; exit 1; }
                        ls -l Netlify || { echo "‚ùå Netlify directory not found!"; exit 1; }
                        echo "‚úÖ Directory structure verified."
                    '''
                }
            }
        }

        stage('Verify Node.js & npm') {
            steps {
                script {
                    echo "üîç Checking Node.js and npm versions..."
                    sh '''
                        which node || { echo "‚ùå Node.js not found!"; exit 1; }
                        which npm || { echo "‚ùå npm not found!"; exit 1; }
                        echo "‚úÖ Node.js Version: $(node -v)"
                        echo "‚úÖ npm Version: $(npm -v)"
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh '''
                        echo "üì¶ Installing dependencies..."
                        cd Netlify 
                        npm install || { echo "‚ùå Failed to install dependencies"; exit 1; }
                    '''
                }
            }
        }

        stage('Build Application') {
            steps {
                script {
                    sh '''
                        echo "‚öôÔ∏è Building application..."
                        cd Netlify 
                        npm run build || { echo "‚ùå Build failed"; exit 1; }
                        echo "‚úÖ Build successful."
                    '''
                }
            }
        }

        stage('Deploy to Netlify (Production)') {
            steps {
                script {
                    echo "üöÄ Deploying to Netlify Production..."
                    sh '''
                        cd Netlify 

                        # Install Netlify CLI
                        npm install -g netlify-cli

                        # Deploy to Netlify production site
                        npx netlify deploy --auth $NETLIFY_AUTH_TOKEN --site $NETLIFY_PROD_SITE_ID --dir build --prod --message "Production deployment" || { echo "‚ùå Production deployment to Netlify failed"; exit 1; }

                        echo "‚úÖ Production deployment successful!"
                    '''
                }
            }
        }

        stage('Send Email Notification') {
            steps {
                echo "üìß Sending email notification for production deployment..."
                mail to: 'gogulanavateja1910@gmail.com',
                     subject: 'üöÄ Production Deployment Successful',
                     body: 'The latest changes have been successfully deployed to Netlify Production.',
                     from: 'gogulateja92@gmail.com',
                     replyTo: 'gogulanavateja1910@gmail.com'
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "‚úÖ Deployment completed successfully!"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs for details."
        }
    }
}
